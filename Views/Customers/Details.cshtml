@model BookManagementSystem.Models.Customer
@{
    ViewData["Title"] = "รายละเอียดลูกค้า";
}
<div class="glass-card mt-4">
    <h2 class="mb-4 text-white"><i class="fas fa-user me-2"></i>รายละเอียดลูกค้า</h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>ข้อมูลลูกค้า</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ชื่อลูกค้า:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        
                        <dt class="col-sm-4">อีเมล:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        
                        <dt class="col-sm-4">เบอร์โทรศัพท์:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>ประวัติการสั่งซื้อ</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <label class="form-label">จำนวนคำสั่งซื้อ:</label>
                            <h4>@Model.Orders.Count รายการ</h4>
                        </div>
                        <div class="col-6">
                            <label class="form-label">ยอดรวมทั้งหมด:</label>
                            <h4 class="text-primary">@Model.Orders.Sum(o => o.TotalAmount).ToString("N2") บาท</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    @if (Model.Orders.Any())
    {
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>รายการคำสั่งซื้อ</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>รหัสคำสั่งซื้อ</th>
                                <th>วันที่สั่งซื้อ</th>
                                <th>จำนวนรายการ</th>
                                <th>ยอดรวม</th>
                                <th style="width: 100px;">จัดการ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate))
                            {
                                <tr>
                                    <td>#@order.OrderId.ToString("D4")</td>
                                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                    <td>@order.OrderItems.Count รายการ</td>
                                    <td>@order.TotalAmount.ToString("N2") บาท</td>
                                    <td>
                                        <a href="/Orders/Details/@order.OrderId" class="btn btn-info btn-sm" title="ดูรายละเอียด">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card mt-3">
            <div class="card-body text-center py-4">
                <i class="fas fa-shopping-cart fa-3x text-muted"></i>
                <p class="text-muted mt-2">ลูกค้าคนนี้ยังไม่มีประวัติการสั่งซื้อ</p>
            </div>
        </div>
    }
    
    <div class="d-flex gap-2 mt-3">
        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>แก้ไข
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>กลับ
        </a>
    </div>
</div> 