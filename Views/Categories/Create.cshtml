@model BookManagementSystem.Models.Category
@{
    ViewData["Title"] = "Add Category";
}
<div class="glass-card mt-4">
    <h2 class="mb-4 text-white"><i class="fas fa-plus me-2"></i>Add Category</h2>
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label asp-for="Name" class="form-label text-white"><i class="fas fa-tags me-1"></i>Category Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-modern"><i class="fas fa-save me-1"></i>Save</button>
            <a asp-action="Index" class="btn btn-secondary-modern"><i class="fas fa-arrow-left me-1"></i>Back</a>
        </div>
    </form>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div> 