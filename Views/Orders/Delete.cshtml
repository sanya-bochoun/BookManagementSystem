@model BookManagementSystem.Models.Order
@{
    ViewData["Title"] = "ลบคำสั่งซื้อ";
}
<div class="glass-card mt-4">
    <h2 class="mb-4 text-white"><i class="fas fa-trash me-2"></i>ลบคำสั่งซื้อ</h2>
    
    <div class="alert alert-danger">
        <h5><i class="fas fa-exclamation-triangle me-2"></i>คุณแน่ใจหรือไม่ที่จะลบคำสั่งซื้อนี้?</h5>
        <p class="mb-0">การดำเนินการนี้ไม่สามารถยกเลิกได้</p>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>ข้อมูลคำสั่งซื้อ</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">รหัสคำสั่งซื้อ:</dt>
                        <dd class="col-sm-8">#@Model.OrderId.ToString("D4")</dd>
                        
                        <dt class="col-sm-4">ลูกค้า:</dt>
                        <dd class="col-sm-8">@Model.Customer?.Name</dd>
                        
                        <dt class="col-sm-4">วันที่สั่งซื้อ:</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToString("dd/MM/yyyy")</dd>
                        
                        <dt class="col-sm-4">ยอดรวม:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary fs-6">@Model.TotalAmount.ToString("N2") บาท</span>
                        </dd>
                        
                        <dt class="col-sm-4">จำนวนรายการ:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.OrderItems.Count รายการ</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>รายการสินค้า</h5>
                </div>
                <div class="card-body">
                    @if (Model.OrderItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>สินค้า</th>
                                        <th>จำนวน</th>
                                        <th>ราคา</th>
                                        <th>ยอดรวม</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.UnitPrice.ToString("N2")</td>
                                            <td>@item.SubTotal.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">ไม่มีรายการสินค้า</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-1"></i>ยืนยันการลบ
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>ยกเลิก
            </a>
        </div>
    </form>
</div> 