@model BookManagementSystem.Models.Order
@{
    ViewData["Title"] = "Create New Order";
    var customers = ViewBag.Customers as List<BookManagementSystem.Models.Customer>;
}

<div class="glass-card mt-4">
    <h2 class="mb-4 text-white"><i class="fas fa-plus me-2"></i>Create New Order</h2>
    
    <form asp-action="Create" method="post" id="orderForm">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <h6><i class="fas fa-exclamation-triangle me-2"></i>An error occurred</h6>
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
        
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Order Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="CustomerId" class="form-label">Customer</label>
                            <select asp-for="CustomerId" class="form-control" required>
                                <option value="">-- Select Customer --</option>
                                @if (customers != null)
                                {
                                    foreach (var customer in customers)
                                    {
                                        <option value="@customer.CustomerId">@customer.Name (@customer.Email)</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="OrderDate" class="form-label">Order Date</label>
                            <input asp-for="OrderDate" class="form-control" type="date" required />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-calculator me-2"></i>Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <label class="form-label">Number of Items:</label>
                                <h4 id="itemCount">0</h4>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Total Amount:</label>
                                <h4 id="totalAmount" class="text-primary">0.00 THB</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>Order Items</h5>
                <button type="button" class="btn btn-success btn-sm" onclick="addOrderItem()">
                    <i class="fas fa-plus me-1"></i>Add Item
                </button>
            </div>
            <div class="card-body">
                <!-- Search Book Section -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Search Book</label>
                        <input type="text" class="form-control book-search" id="global-book-search" placeholder="Search book title or author..." onkeyup="searchBooksGlobal()">
                        <div class="book-search-results" id="global-search-results" style="display: none; position: absolute; z-index: 1000; background: white; border: 1px solid #ddd; max-height: 200px; overflow-y: auto; width: 100%;"></div>
                    </div>
                </div>
                
                <div id="orderItemsContainer">
                    <!-- Order items will be added here dynamically -->
                </div>
            </div>
        </div>
        
        <input type="hidden" id="orderItemsJson" name="orderItemsJson" />
        
        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-modern">
                <i class="fas fa-save me-1"></i>Save Order
            </button>
            <a asp-action="Index" class="btn btn-secondary-modern">
                <i class="fas fa-arrow-left me-1"></i>Back
            </a>
        </div>
    </form>
</div>

<script>
let orderItems = [];
let itemCounter = 0;

function addOrderItem() {
    const container = document.getElementById('orderItemsContainer');
    const itemDiv = document.createElement('div');
    itemDiv.className = 'row mb-3 order-item';
    itemDiv.id = `item-${itemCounter}`;
    
    itemDiv.innerHTML = `
        <div class="col-md-4">
            <label class="form-label">Product Name</label>
            <input type="text" class="form-control product-name" placeholder="Product name" required readonly>
        </div>
        <div class="col-md-2">
            <label class="form-label">Quantity</label>
            <input type="number" class="form-control quantity" min="1" value="1" required onchange="calculateSubTotal(${itemCounter})">
        </div>
        <div class="col-md-2">
            <label class="form-label">Unit Price</label>
            <input type="number" class="form-control unit-price" min="0.01" step="0.01" value="0.00" required onchange="calculateSubTotal(${itemCounter})" readonly>
        </div>
        <div class="col-md-2">
            <label class="form-label">Sub Total</label>
            <input type="text" class="form-control sub-total" readonly value="0.00">
        </div>
        <div class="col-md-2">
            <label class="form-label">&nbsp;</label>
            <button type="button" class="btn btn-danger btn-sm w-100" onclick="removeOrderItem(${itemCounter})">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    `;
    
    container.appendChild(itemDiv);
    itemCounter++;
    updateSummary();
}

function removeOrderItem(itemId) {
    const itemDiv = document.getElementById(`item-${itemId}`);
    if (itemDiv) {
        itemDiv.remove();
        updateSummary();
    }
}

function calculateSubTotal(itemId) {
    const itemDiv = document.getElementById(`item-${itemId}`);
    const quantity = parseFloat(itemDiv.querySelector('.quantity').value) || 0;
    const unitPrice = parseFloat(itemDiv.querySelector('.unit-price').value) || 0;
    const subTotal = quantity * unitPrice;
    
    itemDiv.querySelector('.sub-total').value = subTotal.toFixed(2);
    updateSummary();
}

function updateSummary() {
    const items = document.querySelectorAll('.order-item');
    let totalAmount = 0;
    
    items.forEach(item => {
        const subTotal = parseFloat(item.querySelector('.sub-total').value) || 0;
        totalAmount += subTotal;
    });
    
    document.getElementById('itemCount').textContent = items.length;
    document.getElementById('totalAmount').textContent = totalAmount.toFixed(2) + ' THB';
}

function searchBooksGlobal() {
    const searchInput = document.getElementById('global-book-search');
    const searchTerm = searchInput.value.trim();
    const resultsDiv = document.getElementById('global-search-results');
    
    if (searchTerm.length < 2) {
        resultsDiv.style.display = 'none';
        return;
    }
    
    // Call API to search books
    fetch(`/Books/Search?searchString=${encodeURIComponent(searchTerm)}`)
        .then(response => response.json())
        .then(books => {
            resultsDiv.innerHTML = '';
            
            if (books.length > 0) {
                books.forEach(book => {
                    const bookDiv = document.createElement('div');
                    bookDiv.className = 'p-2 border-bottom book-result';
                    bookDiv.style.cursor = 'pointer';
                    bookDiv.innerHTML = `
                        <div><strong>${book.title}</strong></div>
                        <div class="text-muted">${book.author} - ${book.price} THB</div>
                    `;
                    bookDiv.onclick = () => selectBookGlobal(book);
                    resultsDiv.appendChild(bookDiv);
                });
                resultsDiv.style.display = 'block';
            } else {
                resultsDiv.innerHTML = '<div class="p-2 text-muted">No books found</div>';
                resultsDiv.style.display = 'block';
            }
        })
        .catch(error => {
            console.error('Error searching books:', error);
            resultsDiv.innerHTML = '<div class="p-2 text-danger">Error searching books</div>';
            resultsDiv.style.display = 'block';
        });
}

function selectBookGlobal(book) {
    // Add a new order item with the selected book
    addOrderItem();
    
    // Get the last added item
    const lastItemId = itemCounter - 1;
    const itemDiv = document.getElementById(`item-${lastItemId}`);
    const productNameInput = itemDiv.querySelector('.product-name');
    const unitPriceInput = itemDiv.querySelector('.unit-price');
    
    // Set the selected book data
    productNameInput.value = book.title;
    unitPriceInput.value = book.price;
    
    // Clear the global search
    document.getElementById('global-book-search').value = '';
    document.getElementById('global-search-results').style.display = 'none';
    
    // Calculate subtotal
    calculateSubTotal(lastItemId);
}

function searchBooks(itemId) {
    const searchInput = document.querySelector(`#item-${itemId} .book-search`);
    const searchTerm = searchInput.value.trim();
    const resultsDiv = document.getElementById(`search-results-${itemId}`);
    
    if (searchTerm.length < 2) {
        resultsDiv.style.display = 'none';
        return;
    }
    
    // Call API to search books
    fetch(`/Books/Search?searchString=${encodeURIComponent(searchTerm)}`)
        .then(response => response.json())
        .then(books => {
            resultsDiv.innerHTML = '';
            
            if (books.length > 0) {
                books.forEach(book => {
                    const bookDiv = document.createElement('div');
                    bookDiv.className = 'p-2 border-bottom book-result';
                    bookDiv.style.cursor = 'pointer';
                    bookDiv.innerHTML = `
                        <div><strong>${book.title}</strong></div>
                        <div class="text-muted">${book.author} - ${book.price} THB</div>
                    `;
                    bookDiv.onclick = () => selectBook(itemId, book);
                    resultsDiv.appendChild(bookDiv);
                });
                resultsDiv.style.display = 'block';
            } else {
                resultsDiv.innerHTML = '<div class="p-2 text-muted">No books found</div>';
                resultsDiv.style.display = 'block';
            }
        })
        .catch(error => {
            console.error('Error searching books:', error);
            resultsDiv.innerHTML = '<div class="p-2 text-danger">Error searching books</div>';
            resultsDiv.style.display = 'block';
        });
}

function selectBook(itemId, book) {
    const itemDiv = document.getElementById(`item-${itemId}`);
    const productNameInput = itemDiv.querySelector('.product-name');
    const unitPriceInput = itemDiv.querySelector('.unit-price');
    const searchInput = itemDiv.querySelector('.book-search');
    const resultsDiv = document.getElementById(`search-results-${itemId}`);
    
    // Set the selected book data
    productNameInput.value = book.title;
    unitPriceInput.value = book.price;
    searchInput.value = book.title;
    
    // Hide search results
    resultsDiv.style.display = 'none';
    
    // Calculate subtotal
    calculateSubTotal(itemId);
}

// Hide search results when clicking outside
document.addEventListener('click', function(e) {
    if (!e.target.closest('.book-search') && !e.target.closest('.book-search-results')) {
        document.querySelectorAll('.book-search-results').forEach(div => {
            div.style.display = 'none';
        });
    }
});

function prepareOrderItems() {
    const items = [];
    const orderItemElements = document.querySelectorAll('.order-item');
    
    console.log('Preparing order items...');
    console.log('Found order items:', orderItemElements.length);
    
    orderItemElements.forEach((item, index) => {
        const productName = item.querySelector('.product-name').value;
        const quantity = parseInt(item.querySelector('.quantity').value);
        const unitPrice = parseFloat(item.querySelector('.unit-price').value);
        
        console.log(`Item ${index + 1}:`, { productName, quantity, unitPrice });
        
        if (productName && quantity > 0 && unitPrice > 0) {
            items.push({
                ProductName: productName,
                Quantity: quantity,
                UnitPrice: unitPrice
            });
        } else {
            console.log(`Item ${index + 1} skipped - invalid data`);
        }
    });
    
    const jsonData = JSON.stringify(items);
    console.log('JSON Data:', jsonData);
    
    document.getElementById('orderItemsJson').value = jsonData;
    
    // Validate form before submit
    const form = document.getElementById('orderForm');
    const customerId = form.querySelector('select[name="CustomerId"]').value;
    const orderDate = form.querySelector('input[name="OrderDate"]').value;
    
    console.log('Form validation:', { customerId, orderDate, itemsCount: items.length });
    
    if (!customerId) {
        alert('Please select a customer');
        return false;
    }
    
    if (!orderDate) {
        alert('Please select an order date');
        return false;
    }
    
    if (items.length === 0) {
        alert('Please add at least 1 order item');
        return false;
    }
    
    return true;
}

// Add form submit handler
document.addEventListener('DOMContentLoaded', function() {
    addOrderItem();
    
    const form = document.getElementById('orderForm');
    form.addEventListener('submit', function(e) {
        if (!prepareOrderItems()) {
            e.preventDefault();
            return false;
        }
    });
});
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 