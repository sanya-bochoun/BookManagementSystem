@model BookManagementSystem.Models.Order
@{
    ViewData["Title"] = "รายละเอียดคำสั่งซื้อ";
}
<div class="glass-card mt-4">
    <h2 class="mb-4 text-white"><i class="fas fa-info-circle me-2"></i>รายละเอียดคำสั่งซื้อ</h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>ข้อมูลคำสั่งซื้อ</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">รหัสคำสั่งซื้อ:</dt>
                        <dd class="col-sm-8">#@Model.OrderId.ToString("D4")</dd>
                        
                        <dt class="col-sm-4">ลูกค้า:</dt>
                        <dd class="col-sm-8">@Model.Customer?.Name</dd>
                        
                        <dt class="col-sm-4">อีเมล:</dt>
                        <dd class="col-sm-8">@Model.Customer?.Email</dd>
                        
                        <dt class="col-sm-4">เบอร์โทร:</dt>
                        <dd class="col-sm-8">@Model.Customer?.Phone</dd>
                        
                        <dt class="col-sm-4">วันที่สั่งซื้อ:</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToString("dd/MM/yyyy")</dd>
                        
                        <dt class="col-sm-4">ยอดรวม:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary fs-6">@Model.TotalAmount.ToString("N2") บาท</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-calculator me-2"></i>สรุปยอด</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <label class="form-label">จำนวนรายการ:</label>
                            <h4>@Model.OrderItems.Count รายการ</h4>
                        </div>
                        <div class="col-6">
                            <label class="form-label">ยอดรวม:</label>
                            <h4 class="text-primary">@Model.TotalAmount.ToString("N2") บาท</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mt-3">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>รายการสินค้า</h5>
        </div>
        <div class="card-body">
            @if (Model.OrderItems.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ลำดับ</th>
                                <th>ชื่อสินค้า</th>
                                <th>จำนวน</th>
                                <th>ราคาต่อหน่วย</th>
                                <th>ยอดรวม</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.OrderItems.Count; i++)
                            {
                                var item = Model.OrderItems.ElementAt(i);
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("N2") บาท</td>
                                    <td>@item.SubTotal.ToString("N2") บาท</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-primary">
                                <td colspan="4" class="text-end"><strong>ยอดรวมทั้งหมด:</strong></td>
                                <td><strong>@Model.TotalAmount.ToString("N2") บาท</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-box fa-3x text-muted"></i>
                    <p class="text-muted mt-2">ไม่มีรายการสินค้า</p>
                </div>
            }
        </div>
    </div>
    
    <div class="d-flex gap-2 mt-3">
        <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>แก้ไข
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>กลับ
        </a>
    </div>
</div> 