<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Management System - Modern Design</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="@Url.Content("~/css/modern-ui.css")" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Floating background elements -->
    <div class="floating-elements">
        <div class="floating-element" style="left: 10%; animation-delay: 0s;"></div>
        <div class="floating-element" style="left: 20%; animation-delay: 3s;"></div>
        <div class="floating-element" style="left: 30%; animation-delay: 6s;"></div>
        <div class="floating-element" style="left: 40%; animation-delay: 9s;"></div>
        <div class="floating-element" style="left: 50%; animation-delay: 12s;"></div>
        <div class="floating-element" style="left: 60%; animation-delay: 15s;"></div>
        <div class="floating-element" style="left: 70%; animation-delay: 18s;"></div>
        <div class="floating-element" style="left: 80%; animation-delay: 21s;"></div>
        <div class="floating-element" style="left: 90%; animation-delay: 24s;"></div>
    </div>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Books">
                <i class="fas fa-book-open"></i>
                Book Management
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars text-white"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home">
                            <i class="fas fa-home me-2"></i>หน้าแรก
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Books">
                            <i class="fas fa-book me-2"></i>หนังสือ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Categories">
                            <i class="fas fa-tags me-2"></i>หมวดหมู่
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Customers">
                            <i class="fas fa-users me-2"></i>ลูกค้า
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Orders">
                            <i class="fas fa-shopping-cart me-2"></i>คำสั่งซื้อ
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top: 100px;">
        @RenderBody()
    </div>
    <script src="@Url.Content("~/js/modern-ui.js")"></script>
    @RenderSection("Scripts", required: false)
</body>
</html> 