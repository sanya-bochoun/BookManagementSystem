@model BookManagementSystem.Models.Book
@{
    ViewData["Title"] = "Delete Book";
}
<h2>@ViewData["Title"]</h2>
<h4>Are you sure you want to delete this book?</h4>
<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Book Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>
            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.Author</dd>
            <dt class="col-sm-3">Published Date</dt>
            <dd class="col-sm-9">@Model.PublishedDate.ToString("yyyy-MM-dd")</dd>
            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.ISBN</dd>
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="BookId" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div> 