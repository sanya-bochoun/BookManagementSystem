@model BookManagementSystem.Models.Book
@{
    ViewData["Title"] = "แก้ไขข้อมูลหนังสือ";
}
<div class="glass-card mt-4">
    <h2 class="mb-4 text-white"><i class="fas fa-edit me-2"></i>แก้ไขข้อมูลหนังสือ</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" asp-for="CoverImageUrl" />
        
        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label text-white"><i class="fas fa-book me-1"></i>ชื่อหนังสือ</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Author" class="form-label text-white"><i class="fas fa-user-edit me-1"></i>ผู้แต่ง</label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PublishedDate" class="form-label text-white"><i class="fas fa-calendar-alt me-1"></i>วันที่ตีพิมพ์</label>
                    <input asp-for="PublishedDate" class="form-control" type="date" />
                    <span asp-validation-for="PublishedDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ISBN" class="form-label text-white"><i class="fas fa-barcode me-1"></i>ISBN</label>
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label text-white"><i class="fas fa-tags me-1"></i>หมวดหมู่</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">-- เลือกหมวดหมู่ --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Price" class="form-label text-white"><i class="fas fa-money-bill me-1"></i>ราคา</label>
                    <input asp-for="Price" class="form-control" type="number" min="0.01" step="0.01" placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Description" class="form-label text-white"><i class="fas fa-align-left me-1"></i>รายละเอียดหนังสือ</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="อธิบายเนื้อหา สาระสำคัญ หรือรายละเอียดของหนังสือ..."></textarea>
                    <small class="text-muted">(ไม่เกิน 2000 ตัวอักษร)</small>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="coverImage" class="form-label text-white"><i class="fas fa-image me-1"></i>รูปปกหนังสือ</label>
                    <input type="file" id="coverImage" name="coverImage" class="form-control" accept="image/*" />
                    <small class="text-white-50">เลือกไฟล์ใหม่เพื่อเปลี่ยนรูปปก (รองรับไฟล์: JPG, PNG, GIF ขนาดไม่เกิน 5MB)</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-image me-1"></i>รูปปกปัจจุบัน</h6>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                        {
                            <img src="@Model.CoverImageUrl" class="img-fluid rounded" alt="@Model.Title" style="max-height: 300px; object-fit: cover;">
                            <p class="text-muted mt-2">รูปปกปัจจุบัน</p>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-book fa-4x text-muted"></i>
                                <p class="text-muted mt-2">ไม่มีรูปปก</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-modern"><i class="fas fa-save me-1"></i>บันทึก</button>
            <a asp-action="Index" class="btn btn-secondary-modern"><i class="fas fa-arrow-left me-1"></i>กลับ</a>
        </div>
    </form>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div> 